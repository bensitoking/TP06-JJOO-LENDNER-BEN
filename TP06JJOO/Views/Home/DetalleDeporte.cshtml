@{
    ViewData["Title"] = "Detalle Deporte";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TP06JJOO</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <main class="container">
        <div class="card">
            <h2>@ViewBag.VerInfoDeporte.Nombre</h2>
            <img src="@ViewBag.VerInfoDeporte.Foto" alt="@ViewBag.VerInfoDeporte.Nombre" class="img-responsive" />
            <p>Descripción del deporte o detalles adicionales pueden ir aquí si existen.</p>

            <h3>Deportistas que practican este deporte</h3>
            <ul>
                @foreach (var deportista in ViewBag.ListarDeportistasxDeporte)
                {
                    <li>
                        <a href="@Url.Action("DetalleDeportista", "Home", new { idDeportista = deportista.idDeportista })">@deportista.Nombre @deportista.Apellido</a>
                    </li>
                }
            </ul>
        </div>
    </main>
    <footer>
        <p>&copy; 2024 TP06JJOO. Todos los derechos reservados.</p>
    </footer>
</body>
</html>
